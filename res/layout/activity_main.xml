<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.edp.circlebuttongrouped"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:clipChildren="false"
    android:padding="10dp"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/rlLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <com.edp.circlebuttongrouped.CircleImgBtnGroup
            android:id="@+id/cibGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            app:collapseAtClick="true"
            app:ibCount="3"
            app:ibHeight="80"
            app:ibWidth="80"
            app:imgSrcCIB1="@drawable/afternoon"
            app:imgSrcCIB2="@drawable/close_activity"
            app:imgSrcCIB3="@drawable/close_book" />

        <com.edp.circlebuttongrouped.CircleImgBtnGroup
            android:id="@+id/CibGroup01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cibGroup1"
            android:layout_below="@+id/cibGroup1"
            android:layout_marginTop="10dp"
            app:collapseAtClick="true"
            app:ibCount="4"
            app:ibHeight="80"
            app:ibWidth="80"
            app:imgSrcCIB1="@drawable/afternoon"
            app:imgSrcCIB2="@drawable/close_activity"
            app:imgSrcCIB3="@drawable/close_book"
            app:imgSrcCIB4="@drawable/cry" />

        <com.edp.circlebuttongrouped.CircleImgBtnGroup
            android:id="@+id/CibGroup02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/CibGroup01"
            android:layout_below="@+id/CibGroup01"
            android:layout_marginTop="10dp"
            app:collapseAtClick="true"
            app:ibCount="5"
            app:ibHeight="80"
            app:ibWidth="80"
            app:imgSrcCIB1="@drawable/afternoon"
            app:imgSrcCIB2="@drawable/close_activity"
            app:imgSrcCIB3="@drawable/close_book"
            app:imgSrcCIB4="@drawable/cry" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="222dp"
            android:layout_marginTop="26dp"
            android:text="TextView" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlRight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

    </RelativeLayout>

</LinearLayout>
